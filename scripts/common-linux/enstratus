set -u

SELF=$(cd $(dirname $0); pwd -P)/$(basename $0)

case "${1:-''}" in
  'start')
    if [ -x /enstratus/bin/esboot ] ; then 
        su - enstratus -s "/bin/bash" -c "/enstratus/bin/esboot start"
    fi
    ;;

  'stop')
    if [ -x /enstratus/bin/esboot ] ; then 
        su - enstratus -s "/bin/bash" -c "/enstratus/bin/esboot stop"
    fi
    ;;
    
  'restart')
    if [ -x /enstratus/bin/esboot ] ; then
	su - enstratus -s "/bin/bash" -c "/enstratus/bin/esboot stop"
        su - enstratus -s "/bin/bash" -c "/enstratus/bin/esboot start"
    fi
    ;;
    
  'reload')
    ;;
    
  *)
    echo "Usage: $SELF start|stop|restart|reload"
        exit 1
        ;;
    
esac
